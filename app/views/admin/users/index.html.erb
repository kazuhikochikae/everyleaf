<h1>管理画面のユーザー一覧画面</h1>

<table>
<% @users.each do |user| %>
 <tr>
<td><%= user.id %> : <%= user.name %></td>
<td>タスク数: <%= user.tasks.count %></td>
    <td class="right_txt"><%= link_to "編集", edit_admin_user_path(user.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td class="right_txt"><%= link_to '削除', admin_user_path(user.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
 <td>
        <% if user.admin? %>
          <%= link_to '管理者解除', remove_admin_role_admin_user_path(user.id), method: :patch, data: { confirm: '本当に管理者権限を解除しますか？' } %>
        <% else %>
          <%= link_to '管理者にする', add_admin_role_admin_user_path(user.id), method: :patch, data: { confirm: '本当に管理者にしますか？' } %>
        <% end %>
      </td>
 </tr>
<% end %>
</table>

<%= link_to "新規登録", new_admin_user_path %>


